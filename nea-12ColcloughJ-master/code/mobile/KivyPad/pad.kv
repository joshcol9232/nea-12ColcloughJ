# File name: kiv.py
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import Window kivy.core.window.Window

ScreenManagement:
    id: screenmanager
    transition: FadeTransition()
    PadScreen:
        name: "Pad"
        id: Pad
        manager: screenmanager
    # DeviceSelectionScreen:
    #     name: "Select"
    #     id: Select
    #     manager: screenmanager
    # ConfirmationScreen:
    #     name: "Confirm"
    #     id: Confirm
    #     manager: screenmanager

<PadNum@Button>:
    font_size: 30
    on_release: root.root.addNum(self.text)

<DeviceButton@Button>:
    font_size: 80
    on_release: self.devicePop.setupBT(self.text);self.devicePop.dismiss()


<PadScreen>:
    display: display
    FloatLayout:
        GridLayout:
            size_hint_y: .7
            cols: 3
            Button:
                font_size: 30
                text: "7"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "8"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "9"
                on_release: root.addNum(self.text)

            Button:
                font_size: 30
                text: "4"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "5"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "6"
                on_release: root.addNum(self.text)

            Button:
                font_size: 30
                text: "1"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "2"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "3"
                on_release: root.addNum(self.text)


            Button:
                font_size: 30
                text: "DEL"
                on_release: root.backSpace()
            Button:
                font_size: 30
                text: "0"
                on_release: root.addNum(self.text)
            Button:
                font_size: 30
                text: "Submit"
                on_release: root.confirm()

        Label:
            id: display
            text: root.numsString
            font_size: 40
            pos_hint: {"center_x": .5, "y": .35}
